apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: tenant
  namespace: argocd
spec:
  sourceRepos:
  - '*'
  destinations:
  - namespace: dev
    server: '*'
  - namespace: qa
    server: '*'    
  namespaceResourceBlacklist:
  - group: ''
    kind: ResourceQuota
  - group: ''
    kind: LimitRange
  - group: 'networking.k8s.io'
    kind: NetworkPolicy
  orphanedResources:
    warn: false
  roles:
  - name: admin
    groups:
    - VirtoCommerce
    policies:
    - p, proj:tenant:admin, applications, *, tenant/*, allow